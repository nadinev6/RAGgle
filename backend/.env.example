# Nuclia API Configuration
# Copy this file to .env and replace with your actual values

# Your Nuclia Edit API Key - used for indexing/uploading content
# Get this from your Nuclia dashboard (Edit API permissions)
NUCLIA_WRITER_API_KEY="your_NUCLIA_WRITER_API_KEY_here"

# Your Nuclia Search API Key - used for searching and chat functionality
# Get this from your Nuclia dashboard (Search API permissions)
NUCLIA_READER_API_KEY="your_NUCLIA_READER_API_KEY_here"

# Your Nuclia E-commerce Knowledge Base ID - create this in your Nuclia dashboard
NUCLIA_KB_UID="your_ecommerce_knowledge_base_id_here"

# Supabase Configuration
# Your Supabase project URL - get this from your Supabase dashboard
SUPABASE_URL="your_supabase_project_url_here"

# Your Supabase anon key - get this from your Supabase dashboard
SUPABASE_ANON_KEY="your_supabase_anon_key_here"